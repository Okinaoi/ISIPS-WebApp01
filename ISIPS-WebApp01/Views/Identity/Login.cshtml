@model Models.DTOs.LoginDto
@{
    ViewData["Title"] = "Loggin";
}

<h1>Loggin</h1>


<div class="customContainer">
    <div class="row">
        <form class="login100-form validate-form" asp-action="Login">

            <div class="wrap-input100 validate-input form-group" data-validate="Valid email is required: ex@abc.xyz">
                <input name="Email" class="input100 form-control" type="text" placeholder="Email" asp-for="@Model.Email">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>

            <div class="wrap-input100 validate-input form-group" data-validate="Password is required">
                <input name="Password" class="input100 form-control" type="password" placeholder="Password" asp-for="@Model.Password">
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn" type="submit">
                    Login
                </button>
            </div>

            <div class="text-center p-t-12">
                <span class="txt1">
                    Forgot
                </span>
                <a class="txt2" href="#">
                    Username / Password?
                </a>
            </div>

            <div class="text-center p-t-136">
                <a class="txt2" asp-controller="Identity" asp-action="Register">
                    Create your Account
                    <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                </a>
            </div>
        </form>
    </div>



</div>

