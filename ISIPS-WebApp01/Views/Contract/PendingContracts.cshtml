@model IEnumerable<Models.DataModels.Contract>

@{
    ViewData["Title"] = "PendingContracts";
}

<h1 class="text-green">Demandes d'interventions</h1>


@if (Model.Count() > 0)
{
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContractId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Client.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Client.Lastname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Client.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractId)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Client.UserId)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Client.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Client.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Ajouter intervention", "AddInterventionToContract", "Intervention", new { contractId = item.ContractId })
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <span class="text-center">Il n'y actuellement aucune demande de client non traitée</span>
}
