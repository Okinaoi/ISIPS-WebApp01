@model IEnumerable<Models.DataModels.Contract>

@{
    ViewData["Title"] = "PendingContracts";
}

<h1 class="text-green">Contrats</h1>


@if (Model.Count() > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContractId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContractId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "InterventionsFromContractForClient", "Intervention", new { id = item.ContractId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span class="text-center">Il n'y actuellement aucune demande de client non traitée</span>
}
